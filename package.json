{
  "name": "scratchy",
  "displayName": "Scratchy",
  "description": "Scratchy helps you quickly create and manage scratch files",
  "version": "0.0.1",
  "publisher": "sulsira",
  "icon": "media/scratchy.png",
"categories": ["Other", "Productivity"],
"galleryBanner": {
  "color": "#f4f1ec",         
  "theme": "light"            
},
  "repository": {
    "type": "git",
    "url": "https://github.com/sulsira/scratchy"
  },
  "engines": {
    "vscode": "^1.101.0"
  },

  "activationEvents": [
    "onView:recentFilesPopup"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "scratchy.show",
        "key": "cmd+ctrl+n",
        "mac": "cmd+ctrl+n",
        "win": "ctrl+alt+n",
        "linux": "ctrl+alt+n",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "scratchy.show",
        "title": "Scratchy: Create Scratch File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "jest": "^30.0.5",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
