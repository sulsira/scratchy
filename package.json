{
  "name": "scratchy",
  "displayName": "Scratchy",
  "description": "Scratchy helps you quickly create and manage scratch files",
  "version": "0.0.4",
  "publisher": "sulsira",
  "icon": "media/scratchy.png",
  "homepage": "https://github.com/sulsira/scratchy#readme",
  "keywords": [
    "scratch",
    "temporary",
    "quick",
    "files",
    "javascript",
    "typescript",
    "python",
    "markdown",
    "json",
    "development",
    "coding",
    "prototype",
    "experiment"
  ],
  "categories": [
    "Other",
    "Snippets",
    "Programming Languages"
  ],
  "galleryBanner": {
    "color": "#f4f1ec",
    "theme": "light"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sulsira/scratchy"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "activationEvents": [
    "onView:recentFilesPopup"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "scratchy.show",
        "key": "cmd+ctrl+n",
        "mac": "cmd+ctrl+n",
        "win": "ctrl+alt+n",
        "linux": "ctrl+alt+n"
      },
      {
        "command": "scratchy.showMarkdownPreview",
        "key": "cmd+shift+v",
        "mac": "cmd+shift+v",
        "win": "ctrl+shift+v",
        "linux": "ctrl+shift+v",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "commands": [
      {
        "command": "scratchy.show",
        "title": "Scratchy: Create Scratch File"
      },
      {
        "command": "scratchy.showMarkdownPreview",
        "title": "Scratchy: Show Markdown Preview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
